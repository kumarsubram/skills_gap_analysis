# =============================================================================
# .env.example - Airflow + Spark + Kafka + Jupyter + MinIO
# =============================================================================

# -----------------------------------------------------------------------------
# Global Identifiers & Paths
# -----------------------------------------------------------------------------
AIRFLOW_UID=50000
AIRFLOW_PROJ_DIR=.
AIRFLOW_ENV=local
VPS_IP=your.vps.ip.here

# -----------------------------------------------------------------------------
# Airflow - Core & DB Config
# -----------------------------------------------------------------------------
POSTGRES_USER=airflow
POSTGRES_PASSWORD=change-me
POSTGRES_DB=airflow

# -----------------------------------------------------------------------------
# Airflow - Web/API Auth User
# -----------------------------------------------------------------------------
_AIRFLOW_WWW_USER_USERNAME=admin
_AIRFLOW_WWW_USER_PASSWORD=change-me

# -----------------------------------------------------------------------------
# Airflow - API Base URL
# -----------------------------------------------------------------------------
AIRFLOW__API__BASE_URL=http://localhost:8085

# -----------------------------------------------------------------------------
# Spark Configuration
# -----------------------------------------------------------------------------
SPARK_WORKER_MEMORY=6G
SPARK_WORKER_CORES=2

# -----------------------------------------------------------------------------
# Jupyter Lab
# -----------------------------------------------------------------------------
JUPYTER_TOKEN=change-me-token

# -----------------------------------------------------------------------------
# Kafka UI Auth
# -----------------------------------------------------------------------------
SPRING_SECURITY_USER_NAME=admin
SPRING_SECURITY_USER_PASSWORD=change-me

# -----------------------------------------------------------------------------
# MinIO / Object Storage Config
# -----------------------------------------------------------------------------
MINIO_ACCESS_KEY=minio-access-key
MINIO_SECRET_KEY=minio-secret-key
MINIO_ENDPOINT=minio:9000
MINIO_BUCKET=delta-lake

# -----------------------------------------------------------------------------
# Optional Airflow Tuning (commented)
# -----------------------------------------------------------------------------
# AIRFLOW__WEBSERVER__WORKERS=2
# AIRFLOW__CELERY__WORKER_CONCURRENCY=4
# AIRFLOW__SCHEDULER__PARSING_PROCESSES=2
